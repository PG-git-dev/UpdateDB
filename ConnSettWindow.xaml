        <TextBox x:Name="serverNameTextBox" HorizontalAlignment="Left" Height="24" Margin="10,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="284" TextChanged="ServerNameTextBox_TextChanged"/>
        <Label x:Name="DbLbel" Content="Имя базы данных:" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Height="27" Width="166"/>
        <TextBox x:Name="DbTextBox" HorizontalAlignment="Left" Height="23" Margin="10,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="284" TextChanged="TextBox_Copy_TextChanged"/>
        <Button x:Name="SaveButton" Content="Сохранить" IsEnabled="False" HorizontalAlignment="Left" Margin="115,175,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.76,0.545" Click="SaveButton_Click"/>

    </Grid>
</Window>
